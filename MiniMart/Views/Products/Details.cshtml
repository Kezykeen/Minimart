@model MiniMart.ViewModels.ProductCategoryViewModel
@helper formatAmount(decimal amount)
{
    @String.Format("{0:c}", amount)
}
@{
    ViewBag.Title = "Details";
}

<div class="details-header">
    <h2>Product Details</h2>
</div>

<hr />
<h1>@Model.product.Name</h1>

<div id="product-container">
    <p id="product-img">
        <img alt="@Model.product.Name"
             width="260" height="250"
             src="@Model.product.ArtUrl" />
    </p>

    <div id="product-details">
        <p>
            @Model.product.Description
        </p>
        <p class="category">
            Category: @Model.category.Name
        </p>
        <p>
           <b>@formatAmount(@Model.product.Price)</b>
        </p>
            @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.product.Id }, new { @class = "btn btn-info" })
    </div>
</div>
